<h1>Product Catelog</h1>

<ul class="products_list">
  <% @products.each do |product| %>
    <li class="product_list_item">
      <%= link_to product  do %>
        <%= image_tag(product.image.url(:medium))%>
        <h4><%= product.name %></h4>
      <% end %>
    </li>
  <% end %>
</ul>

<%= paginate @products %>
